---
interface Props {
  title: string;
  href: string;
  image: string;
  tags: string[];
  excerpt: string;
  delay?: number;
}

const { title, href, image, tags, excerpt, delay = 0 } = Astro.props;
---

<article class="project-card" style={`animation-delay: ${delay}s`}>
  <a href={href} class="project-card__image-wrapper">
    <img 
      src={image} 
      alt={title} 
      class="project-card__image"
      loading="lazy"
    />
    <div class="project-card__overlay"></div>
  </a>
  <div class="project-card__tags">
    {tags.map(tag => (
      <span class="tag">{tag}</span>
    ))}
  </div>
  <h2 class="project-card__title">
    <a href={href}>{title}</a>
  </h2>
  <p class="project-card__excerpt">{excerpt}</p>
  <a href={href} class="project-card__link">
    Continue reading
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</article>

<style>
.project-card {
  display: block;
  opacity: 0;
  animation: fadeInUp 0.8s ease forwards;
}

.project-card__image-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  margin-bottom: var(--space-6);
  display: block;
}

.project-card__image {
  width: 100%;
  aspect-ratio: 16 / 9;
  object-fit: cover;
  background-color: var(--color-border-light);
  transition: transform var(--transition-slow);
}

.project-card:hover .project-card__image {
  transform: scale(1.03);
}

.project-card__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.3) 0%, transparent 50%);
  opacity: 0;
  transition: opacity var(--transition-base);
}

.project-card:hover .project-card__overlay {
  opacity: 1;
}

.project-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  margin-bottom: var(--space-4);
}

.tag {
  display: inline-block;
  padding: var(--space-1) var(--space-3);
  background-color: transparent;
  color: var(--color-text-muted);
  font-size: var(--text-sm);
  border: 1px solid var(--color-border);
  border-radius: 4px;
  transition: all var(--transition-fast);
}

.tag:hover {
  background-color: var(--color-text);
  color: var(--color-bg);
  border-color: var(--color-text);
}

.project-card__title {
  font-family: var(--font-heading);
  font-size: var(--text-3xl);
  font-weight: 400;
  margin-bottom: var(--space-3);
  transition: color var(--transition-fast);
}

.project-card__title a {
  color: inherit;
  text-decoration: none;
}

.project-card:hover .project-card__title {
  color: var(--color-text-muted);
}

.project-card__excerpt {
  color: var(--color-text-muted);
  line-height: 1.8;
  margin-bottom: var(--space-4);
  font-size: var(--text-base);
}

.project-card__link {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  font-weight: 500;
  color: var(--color-text);
  font-size: var(--text-base);
}

.project-card__link svg {
  width: 18px;
  height: 18px;
  transition: transform var(--transition-base);
}

.project-card__link:hover svg {
  transform: translateX(6px);
}

@media (max-width: 768px) {
  .project-card__title {
    font-size: var(--text-2xl);
  }
}
</style>
