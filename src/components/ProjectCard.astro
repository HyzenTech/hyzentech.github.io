---
interface Props {
  title: string;
  href: string;
  image: string;
  tags: string[];
  excerpt: string;
  delay?: number;
}

const { title, href, image, tags, excerpt, delay = 0 } = Astro.props;
---

<article class="project-card" style={`animation-delay: ${delay}s`}>
  <a href={href} class="project-card__image-wrapper">
    <img 
      src={image} 
      alt={title} 
      class="project-card__image"
      loading="lazy"
    />
    <div class="project-card__overlay">
      <span class="project-card__view">View Project â†’</span>
    </div>
  </a>
  <div class="project-card__content">
    <div class="project-card__tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
    <h2 class="project-card__title">
      <a href={href}>{title}</a>
    </h2>
    <p class="project-card__excerpt">{excerpt}</p>
    <a href={href} class="project-card__link">
      Continue reading
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</article>

<style>
/* Project Card - Anthropic-inspired clean design */
.project-card {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-8);
  align-items: center;
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-sm);
  opacity: 0;
  animation: fadeInUp 0.8s ease forwards;
  transition: box-shadow var(--transition-base), transform var(--transition-base);
}

.project-card:hover {
  box-shadow: var(--shadow-lg);
  transform: translateY(-4px);
}

.project-card__image-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: var(--border-radius);
  display: block;
}

.project-card__image {
  width: 100%;
  aspect-ratio: 16 / 10;
  object-fit: cover;
  background-color: var(--color-bg-alt);
  transition: transform var(--transition-slow);
}

.project-card:hover .project-card__image {
  transform: scale(1.03);
}

.project-card__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(20, 20, 19, 0.6) 0%, transparent 60%);
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding: var(--space-4);
  opacity: 0;
  transition: opacity var(--transition-base);
}

.project-card:hover .project-card__overlay {
  opacity: 1;
}

.project-card__view {
  font-family: var(--font-heading);
  font-size: var(--text-sm);
  font-weight: 500;
  color: white;
  background-color: rgba(20, 20, 19, 0.8);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--border-radius-full);
}

.project-card__content {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.project-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.tag {
  display: inline-block;
  padding: var(--space-1) var(--space-3);
  background-color: var(--color-bg-alt);
  color: var(--color-text-muted);
  font-family: var(--font-heading);
  font-size: var(--text-xs);
  font-weight: 500;
  border-radius: var(--border-radius-full);
  transition: all var(--transition-fast);
}

.tag:hover {
  background-color: var(--color-text);
  color: var(--color-bg);
}

.project-card__title {
  font-family: var(--font-heading);
  font-size: var(--text-2xl);
  font-weight: 600;
  line-height: 1.3;
  margin: 0;
}

.project-card__title a {
  color: var(--color-text);
  text-decoration: none;
  transition: color var(--transition-fast);
}

.project-card__title a:hover {
  color: var(--color-text-secondary);
}

.project-card__excerpt {
  font-family: var(--font-body);
  font-size: var(--text-base);
  color: var(--color-text-muted);
  line-height: 1.7;
  margin: 0;
}

.project-card__link {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  font-family: var(--font-heading);
  font-weight: 500;
  color: var(--color-text);
  font-size: var(--text-sm);
  margin-top: var(--space-2);
}

.project-card__link svg {
  width: 16px;
  height: 16px;
  transition: transform var(--transition-base);
}

.project-card__link:hover svg {
  transform: translateX(6px);
}

/* Responsive */
@media (max-width: 768px) {
  .project-card {
    grid-template-columns: 1fr;
    gap: var(--space-5);
  }
  
  .project-card__title {
    font-size: var(--text-xl);
  }
  
  .project-card__image {
    aspect-ratio: 16 / 9;
  }
}
</style>
